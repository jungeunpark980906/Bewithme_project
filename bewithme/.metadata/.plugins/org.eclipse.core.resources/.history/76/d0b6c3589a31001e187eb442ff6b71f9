		//Ïó¨Í∏∞ ÏïÑÎûò Î∂ÄÎ∂Ñ
		$(document).ready(function(){			
		$('#summernote').summernote({
			  height: 100,                 // ÏóêÎîîÌÑ∞ ÎÜíÏù¥
			  minHeight: null,             // ÏµúÏÜå ÎÜíÏù¥
			  maxHeight: null,             // ÏµúÎåÄ ÎÜíÏù¥
			  focus: true,                  // ÏóêÎîîÌÑ∞ Î°úÎî©ÌõÑ Ìè¨Ïª§Ïä§Î•º ÎßûÏ∂úÏßÄ Ïó¨Î∂Ä
			  lang: "ko-KR",					// ÌïúÍ∏Ä ÏÑ§Ï†ï
			  placeholder: 'ÏµúÎåÄ 2048ÏûêÍπåÏßÄ Ïì∏ Ïàò ÏûàÏäµÎãàÎã§',	//placeholder ÏÑ§Ï†ï
	          width : 300,
	  		  callbacks: {
				onImageUpload : function(files){	
					sendFile(files[0],this);
				}
			}
		//callback { onImageUpload : function() } ÏùÄ  
		//Ïù¥ÎØ∏ÏßÄ ÏóÖÎ°úÎìúÍ∞Ä ÏûàÏùÑ Í≤ΩÏö∞ function()ÏùÑ Ìò∏Ï∂úÌïòÍ≤å Îê©ÎãàÎã§. 
		//function() ÏïàÏóê sendFile()Ïù¥ ÏûàÏúºÎãà Í≤∞Íµ≠ sendFile(file, this)Î•º Ìò∏Ï∂úÌïòÍ≤å Îê©ÎãàÎã§. 
		//thisÎäî Ïù¥ÎØ∏ÏßÄ ÏóÖÎ°úÎìúÍ∞Ä Î∞úÏÉùÌïú ÌÉúÍ∑∏(id=summernote)Î•º ÏùòÎØ∏ÌïòÍ≥†, fileÏùÄ ÌÅ¥ÎùºÏù¥Ïñ∏Ìä∏Í∞Ä ÏóÖÎ°úÎìúÌïú ÌååÏùºÏûÖÎãàÎã§.
	          
		});
		});
		
	function sendFile(file, editor){
		var data = new FormData();
		data.append("file", file);
		console.log("file : "+file);
		$.ajax({
			data : data,
			type : "POST",
			url : "/board/SummerNoteImageFile",
			contentType : false,
			processData : false,
			error : function() {
				console.log("ÌååÏùº ÏóêÎü¨!!");
			},
			success : function(url){
				console.log(url);
				console.log(editor);
				$(editor).summernote("insertImage",url);
			}
		});
	}
