	function sendFile(file, editor){
		var data = new FormData();
		data.append("file", file);
		console.log("file : "+file);
		$.ajax({
			data : data,
			type : "POST",
			url : "/board/SummerNoteImageFile",
			contentType : false,
			processData : false,
			error : function() {
				console.log("íŒŒì¼ ì—ëŸ¬!!");
			},
			success : function(url){
				console.log(url);
				console.log(editor);
				$(editor).summernote("insertImage",url);
			}
		});
	}
